<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BookBytes - Your Literary Haven</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding-top: 56px; /* for fixed navbar */
            background-color: #f8f9fa;
        }

        .hero-section {
            position: relative;
            width: 100%;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('https://images.alphacoders.com/132/thumb-1920-1326367.png') center/cover no-repeat;
            opacity: 0.9;
            filter: brightness(0.7);
        }

        .hero-content {
            position: relative;
            text-align: center;
            bottom: 150px;
            color: #ffffff;
        }

        .hero-content h1 {
            font-size: 3rem;
            font-weight: bold;
            -webkit-text-fill-color: wheat;
            text-transform: uppercase;
            margin-bottom: 5px;
        }

        .hero-content p {
            font-size: 1.5rem;
            font-weight: 300;
            -webkit-text-fill-color: wheat;
            margin-bottom: 80px;

        }

        .btn-primary, .btn {
            background-color: #333 !important;
            border-color: #333 !important;
            font-size: 1.25rem;
            padding: 5px 25px;
            border-radius: 50px;
            transition: background-color 0.3s ease, border-color 0.3s ease, transform 0.3s ease;
        }

        .Welcome{
            -webkit-text-fill-color: black;
        }

        .btn-primary:hover, .btn-primary:focus, 
        .btn:hover, .btn:focus {
            background-color: #466bb5 !important;
            border-color: #466bb5 !important;
            transform: scale(1.07);
        }

       
        .footer {
            background-color: #333;
            color: #f2f2f2;
            padding: 10px 0;
            text-align: center;
        }
        .dropdown-menu a.dropdown-item {
            color: #333; /* Text color */
            font-weight: bold; /* Font weight */
            padding: 8px 20px; /* Padding around the text */
            font-size: 14px; /* Font size */
            text-transform: uppercase; /* Convert text to uppercase */
        }

        .dropdown-menu a.dropdown-item:hover, 
        .dropdown-menu a.dropdown-item:focus {
            background-color: #f8f9fa; /* Background color on hover/focus */
            color: #007bff; /* Text color on hover/focus */
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="/BookBytes/home">BookBytes</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link active" href="/BookBytes/home">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/BookBytes/book">Collection</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/BookBytes/contact">Contact</a>
                </li>
                <% if (user) { %>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-user"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item text-dark" href="#">Your Profile</a>
                            <a class="dropdown-item text-dark" href="#">Your Cart</a>
                            <a class="dropdown-item text-dark" href="#">Your Orders</a>
                            <a class="dropdown-item text-dark" href="#">Settings</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-dark" href="/BookBytes/logout">Logout</a>
                        </div>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/BookBytes/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/BookBytes/SignUp">Sign Up</a>
                    </li>
                <% } %>
            </ul>
        </div>
    </nav>
    <% if (messages.error) { %>
        <div class="alert alert-danger">
            <ul>
                <% messages.error.forEach(msg => { %>
                    <li><%= msg %></li>
                <% }); %>
            </ul>
        </div>
    <% } %>
    <% if (messages.success) { %>
        <div class="alert alert-success">
            <%= messages.success %>
        </div>
    <% } %>
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="hero-content">
            <h1 class="Welcome">Welcome to BookBytes</h1>
            <p class="Welcome">Your literary haven for book lovers!</p>
            <a class="btn btn-primary mt-3" href="/BookBytes/book">Explore</a>
        </div>
    </div>

    <!-- Footer -->
    <div class="footer">
        <div class="container">
            <p>
                <a href="https://www.facebook.com" target="_blank" class="text-white mx-2">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="https://www.instagram.com" target="_blank" class="text-white mx-2">
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="mailto:someone@example.com" target="_blank" class="text-white mx-2">
                    <i class="fas fa-envelope"></i>
                </a>
            </p>
            <p>Â© 2024 BookBytes. All Rights Reserved.</p>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
